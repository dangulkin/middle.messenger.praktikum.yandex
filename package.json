{
  "name": "messenger",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "browserslist": "last 2 versions",
  "packageManager": "npm@9.8.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server.cjs",
    "check-types": "npx tsc-files --noEmit",
    "eslint": "npx eslint 'src/**/*.{ts,tsx}'",
    "stylelint": "npx stylelint --fix 'src/**/*.css'",
    "test": "mocha",
    "lint-staged": "npx lint-staged",
    "precommit": "run-s check-types lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.20",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.3",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.16",
    "chai": "^4.3.10",
    "cssnano": "^6.0.1",
    "eslint": "8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.0",
    "handlebars": "^4.7.8",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-normalize": "^10.0.1",
    "prettier": "3.0.3",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.2.2",
    "vite": ">=4.5.1",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "git": "^0.1.5",
    "handlebars": "^4.7.8",
    "nanoid": "^3.3.6"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.css": "stylelint"
  }
}
